<div class="container ">
    <div class="row justify-content-center">
        <h3>Промяна на парола</h3>
    </div>

    <div class="row justify-content-center">

        <div class="col-md-8">
            <form action="/dashboard/pwdchange/{{user.id}}?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="password" class="form-label pt-3">Нова Парола:</label>
                    <input name="password" type="password" class="form-control" id="password" minlenght="6" required>
                </div>
                <div class="form-group">
                    <label for="passwordConfirm">Повторете паролата:</label>
                    <input name="passwordConfirm" type="password" class="form-control" id="password" minlength="3"
                        required>
                </div>
                <div>
                    <a class="btn btn-primary mt-3" href="/dashboard/profile" role="button"> <i
                            class="fas fa-backward"></i>
                        Назад</a>
                    <button type="submit" class="btn btn-primary mr-2 float-right mt-3"><i class="fas fa-save"></i>
                        Запази</button>
                </div>
            </form>
        </div>
    </div>
</div>