<div class="container">
    <h1>Приключили проекти</h1><br>
    <table class="table table-responsive-md table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Предмет</th>
                <th scope="col">Тема</th>
                <th scope="col">Срок за предаване</th>
                <th scope="col">Дата на защита</th>
                <th scope="col" colspan="2">Операции</th>
            </tr>
        </thead>
        <tbody>
            {{#each assignments}}

            <tr>
                <th scope="row">{{course}}</th>
                <td>{{title}}</td>
                <td>{{dueDate}}</td>
                <td>{{defenseDate}}</td>
                <td><a href="/dashboard/assignments/{{_id}}" class="btn btn-info" title="Details"><i
                            class="fas fa-eye"></i> Детайли</a></td>
            </tr>

            {{/each}}
            {{#each assignmentsBeforeDue}}

            <tr>
                <th scope="row">{{course}}</th>
                <td>{{title}}</td>
                <td>{{dueDate}}</td>
                <td>{{defenseDate}}</td>
                <td><a href="/dashboard/assignments/{{_id}}" class="btn btn-info" title="Details"><i
                            class="fas fa-eye"></i> Детайли</a></td>
                <td><a href="/dashboard/assignments/{{_id}}/submit" class="btn btn-primary"
                        title="Към формата за качване и предаване"><i class="fas fa-paper-plane"></i> Предаване</a></td>
            </tr>

            {{/each}}

        </tbody>
    </table>
</div>