<div class="container">
    <h1>Ново задание</h1>
    <br>
    <div class="row">
        <div class="col-md-12 col-xl-6 form-divide">
            <form action="/admin/courses/create" method="post" enctype="multipart/form-data">
                <br>
                <div class="form-group row">
                    <label for="title" class="col-sm-2 col-form-label">Предмет</label>
                    <br>
                    <div class="col-sm-12">
                        <input name="title" readonly type="text" class="form-control" id="title"
                            placeholder="{{course.title}}" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="title">Тема:</label>

                    <input name="title" type="text" class="form-control" id="title"
                        placeholder="Въведете темата на заданието" required>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label for="startDate">Крайна дата за предаване:</label><br>

                        <input type="date" id="startDate" name="startDate" value="2021-06-26" min="2020-01-01"
                            max="2030-12-31" required>

                    </div>
                    <div class="form-group col-sm-6">
                        <label for="endDate">Дата за защити:</label><br>

                        <input type="date" id="endDate" name="endDate" value="2021-06-26" min="2020-01-01"
                            max="2030-12-31" required>

                    </div>
                </div>

                <div>
                    <div class="form-group">
                        <label for="description">Условие:</label>
                        <textarea name="description" type="text" class="form-control" id="description"
                            placeholder="Кратко описание на заданието" rows="3"></textarea>
                    </div>
                </div>




        </div>

        <div class="col ml-4">
            <h3>Студенти:</h3>
            <div class="row overflow-auto" id="student-select">
                {{#each students}}

                <div class="form-check col-12">
                    <input class="form-check-input" type="checkbox" value="" checked>
                    <label class="form-check-label">
                        {{facultyNumber}} -
                        {{names}}
                    </label>
                </div>

                {{/each}}

            </div>




        </div>

    </div>
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-plus"></i>
        Добави</button><br>


</div>