<div class="container">
    <h1>Всички студенти</h1>
    <table class="table table-responsive-md table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Фак.</th>
                <th scope="col">Имена</th>
                <th scope="col">Семестър</th>
                <th scope="col">Специалност</th>
                <th scope="col">Действия
                </th>
            </tr>
        </thead>
        <tbody>

            {{#each students}}

            <tr>
                <th scope="row">{{facultyNumber}}</th>
                <td>{{names}}</td>
                <td>{{semester}}</td>
                <td>{{specialty}}</td>
                <td><a href="/admin/students/edit/{{_id}}" class="btn btn-info" title="Редактирай"><i
                            class="far fa-edit"></i> Редактирай</a>
                </td>
            </tr>

            {{/each}}

        </tbody>
    </table>
    <a href="/admin/students/add"><button class="btn btn-info"><i class="fas fa-plus"></i> Добавяне на
            студенти</button></a>
</div>