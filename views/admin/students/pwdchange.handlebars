<div class="container">
    <div class="row justify-content-center">
        <h1>Редактиране на Студент</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <form action="/admin/students/pwdchange/{{student.id}}?_method=PUT" method="post"
                enctype="multipart/form-data">
                <div class="form-group">
                    <label for="password" class="form-label">Нова Парола:</label>
                    <input name="password" type="password" class="form-control" id="password" minlenght="6" required>
                </div>
                <div class="form-group">
                    <label for="passwordConfirm">Повторете паролата:</label>
                    <input name="passwordConfirm" type="password" class="form-control" id="password" minlength="6"
                        required>
                </div>
                <div>
                    <a class="btn btn-primary" href="/admin/students/" role="button"> <i class="fas fa-backward"></i>
                        Назад</a>
                    <button type="submit" class="btn btn-primary mr-2 float-right"><i class="fas fa-save"></i>
                        Запази</button>
                </div>
            </form>
        </div>
    </div>
</div>