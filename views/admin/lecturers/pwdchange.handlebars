<div class="container">
    <h1>Редактиране на Преподавател</h1>
    <div class="row">
        <div class="col-md-8">
            <form action="/admin/lecturers/pwdchange/{{lecturer.id}}?_method=PUT" method="post"
                enctype="multipart/form-data">
                <div class="form-group">
                    <label for="password" class="form-label">Нова Парола:</label>
                    <input name="password" type="password" class="form-control" id="password" minlenght="6" required>
                </div>
                <div class="form-group">
                    <label for="passwordConfirm">Повторете паролата:</label>
                    <input name="passwordConfirm" type="password" class="form-control" id="password" minlength="6"
                        required>
                </div>
                <div>
                    <a class="btn btn-primary" href="/admin/lecturers/" role="button"> <i class="fas fa-backward"></i>
                        Назад</a>
                    <button type="submit" class="btn btn-primary mr-2"><i class="fas fa-save"></i> Запази</button>
                </div>
            </form>
        </div>
    </div>
</div>