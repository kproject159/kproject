<div class="container">

    <div class="row justify-content-center">
        <h1>Добавяне на Преподавател</h1><br>
        <div class="col-12 col-lg-9">
            <form action="/admin/lecturers/create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name" class="form-label">Имена:</label>
                    <input name="name" type="text" class="form-control" id="name"
                        placeholder="Въведете името на преподавателя" required>
                </div>
                <div class="form-group">
                    <label for="email">Email адрес:</label>
                    <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp"
                        placeholder="primer@tu-sofia.bg" required>
                </div>
                <div class="form-group">
                    <label for="password" class="form-label">Парола:</label>
                    <input name="password" type="password" class="form-control" id="password" minlength="6" required>
                </div>
                <a class="btn btn-primary" href="/admin/lecturers/" role="button"> <i class="fas fa-backward"></i>
                    Назад</a>
                <button type="submit" class="btn btn-primary float-right">
                    <i class="fas fa-plus"></i>
                    Добави</button><br>
            </form>

        </div>
    </div>
</div>